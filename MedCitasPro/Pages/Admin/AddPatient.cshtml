@page
@model AddPatientModel
@{
    ViewData["Title"] = "Agregar Paciente";
}

<div class="container mt-5">
    <h1>Agregar Paciente</h1>

    <form method="post">
        <div class="form-group mb-4">
            <label for="name">Nombre del Paciente</label>
            <input type="text" class="form-control" id="name" name="Name" placeholder="Nombre completo" required />
        </div>
        <div class="form-group mb-4">
            <label for="phone">Teléfono</label>
            <input type="text" class="form-control" id="phone" name="Phone" placeholder="Teléfono de contacto" required />
        </div>
        <div class="form-group mb-4">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="Email" placeholder="Correo electrónico" required />
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-page="/Admin/ManagePatients" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
