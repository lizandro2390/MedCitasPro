@page
@model AddSpecialtyModel
@{
    ViewData["Title"] = "Agregar Especialidad";
}

<div class="container mt-5">
    <h1>Agregar Especialidad</h1>

    <form method="post">
        <div class="form-group mb-4">
            <label for="name">Nombre de la Especialidad</label>
            <input type="text" class="form-control" id="name" name="Name" placeholder="Ingresa el nombre de la especialidad" required />
        </div>
        <div class="form-group mb-4">
            <label for="description">Descripción</label>
            <textarea class="form-control" id="description" name="Description" placeholder="Ingresa una descripción" rows="4" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-page="/Admin/ManageSpecialties" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
