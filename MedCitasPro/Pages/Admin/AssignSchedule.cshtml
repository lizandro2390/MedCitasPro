@page "{id:int}"
@model AssignScheduleModel
@{
    ViewData["Title"] = "Asignar Horario";
}

<div class="container mt-5">
    <h1>Asignar Horario</h1>

    <form method="post">
        <div class="form-group mb-4">
            <label for="specialist">Especialista</label>
            <input type="text" class="form-control" id="specialist" value="@Model.SpecialistName" disabled />
        </div>
        <div class="form-group mb-4">
            <label for="days">Días de Atención</label>
            <input type="text" class="form-control" id="days" name="Days" value="@Model.Days" placeholder="Ejemplo: Lunes a Viernes" required />
        </div>
        <div class="form-group mb-4">
            <label for="hours">Horario de Atención</label>
            <input type="text" class="form-control" id="hours" name="Hours" value="@Model.Hours" placeholder="Ejemplo: 9:00 AM - 3:00 PM" required />
        </div>
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a asp-page="/Admin/ManageSpecialists" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
