@page "{id:int}"
@model DeleteSpecialtyModel
@{
    ViewData["Title"] = "Eliminar Especialidad";
}

<div class="container mt-5">
    <h1>Eliminar Especialidad</h1>

    <p>¿Estás seguro de que deseas eliminar la especialidad <strong>@Model.Name</strong>?</p>

    <form method="post">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-page="/Admin/ManageSpecialties" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
