@page "{id:int}"
@model EditSpecialistModel
@{
    ViewData["Title"] = "Editar Especialista";
}

<div class="container mt-5">
    <h1>Editar Especialista</h1>

    <form method="post">
        <div class="form-group mb-4">
            <label for="name">Nombre</label>
            <input type="text" class="form-control" id="name" name="Specialist.Name" value="@Model.Specialist.Name" required />
        </div>
        <div class="form-group mb-4">
            <label for="specialty">Especialidad</label>
            <input type="text" class="form-control" id="specialty" name="Specialist.Specialty" value="@Model.Specialist.Specialty" required />
        </div>
        <div class="form-group mb-4">
            <label for="phone">Teléfono</label>
            <input type="text" class="form-control" id="phone" name="Specialist.Phone" value="@Model.Specialist.Phone" required />
        </div>
        <div class="form-group mb-4">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="Specialist.Email" value="@Model.Specialist.Email" required />
        </div>
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a asp-page="/Admin/ManageSpecialists" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
