@page "{email}"
@model EditUserModel
@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mt-5">
    <h1>Editar Usuario</h1>
    <a asp-page="/Admin/ManageUsers" class="btn btn-secondary mt-3">Volver a Gestión de Usuarios</a>


    <form method="post">
        <div class="form-group mb-3">
            <label for="email">Correo Electrónico</label>
            <input type="email" class="form-control" id="email" name="Email" value="@Model.Email" readonly />
        </div>
        <div class="form-group mb-3">
            <label for="role">Rol</label>
            <select class="form-control" id="role" name="Role" required>
                <option value="Admin" selected="@(Model.Role == "Admin")">Administrador</option>
                <option value="Secretaria" selected="@(Model.Role == "Secretaria")">Secretaria</option>
                <option value="Paciente" selected="@(Model.Role == "Paciente")">Paciente</option>

            </select>
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-page="/Admin/ManageUsers" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
