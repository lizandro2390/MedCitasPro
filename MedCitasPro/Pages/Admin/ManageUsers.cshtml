@page
@model ManageUsersModel
@{
    ViewData["Title"] = "Gestionar Usuarios";
}

<div class="container mt-5">
    <h1 class="mb-4">Gestionar Usuarios</h1>
    <a asp-page="/Dashboard" class="btn btn-secondary mt-3">Volver al Dashboard</a>


    <a asp-page="/Admin/AddUser" class="btn btn-success mb-3">Agregar Usuario</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Correo Electrónico</th>
                <th>Rol</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>
                        <a asp-page="/Admin/EditUser" asp-route-email="@user.Email" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-page="/Admin/DeleteUser" asp-route-email="@user.Email" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
