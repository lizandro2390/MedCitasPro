@page
@model ManageUsersModel
@{
    ViewData["Title"] = "Gestionar Usuarios";
}

<div class="container mt-5">
    <h1 class="mb-4">Gestionar Usuarios</h1>

    <!-- Fila para organizar los botones -->
    <div class="row mb-3">
        <div class="col-md-6 text-start">
            <a asp-page="/Dashboard" class="btn btn-secondary">Volver al Dashboard</a>
        </div>
        <div class="col-md-6 text-end">
            <a asp-page="/Admin/AddUser" class="btn btn-success">Agregar Usuario</a>
        </div>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Correo Electrónico</th>
                <th>Rol</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>
                        <a asp-page="/Admin/EditUser" asp-route-email="@user.Email" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-page="/Admin/DeleteUser" asp-route-email="@user.Email" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
