@page
@model SystemSettingsModel
@{
    ViewData["Title"] = "Configuración del Sistema";
}

<div class="container mt-5">
    <h1>Configuración del Sistema</h1>
    <a asp-page="/Dashboard" class="btn btn-secondary mt-3">Volver al Dashboard</a>


    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    <form method="post">
        <div class="form-group mb-4">
            <label for="clinicName">Nombre del Consultorio</label>
            <input type="text" class="form-control" id="clinicName" name="ClinicName" value="@Model.ClinicName" required />
        </div>
        <div class="form-group mb-4">
            <label for="workingHours">Horario de Atención</label>
            <input type="text" class="form-control" id="workingHours" name="WorkingHours" value="@Model.WorkingHours" required />
        </div>
        <div class="form-group mb-4">
            <label for="contactEmail">Correo de Contacto</label>
            <input type="email" class="form-control" id="contactEmail" name="ContactEmail" value="@Model.ContactEmail" required />
        </div>
        <button type="submit" class="btn btn-primary">Guardar Configuración</button>
    </form>
</div>
